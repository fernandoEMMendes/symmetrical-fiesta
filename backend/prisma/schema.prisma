// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id String @id @default(uuid())

  nome  String
  senha String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("usuarios")
}

model Produtos {
  id String @id @default(uuid())

  nome      String
  descricao String
  banner    String
  preco     String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("produtos")
}

model Pedidos {
  id String @id @default(uuid())

  item1  String
  quant1 String
  item2  String?
  quant2 String?
  item3  String?
  quant3 String?
  item4  String?
  quant4 String?
  item5  String?
  quant5 String?

  atendente   Atendente @relation(fields: [atendenteID], references: [id_atendente])
  atendenteID String

  mesa   Mesa   @relation(fields: [mesaID], references: [id_mesa])
  mesaID String

  @@map("pedidos")
}

model Atendente {
  id_atendente String @id @default(uuid())
  nome         String
  cpf          String
  senha        String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  pedidos Pedidos[]

  @@map("atendentes")
}

model Mesa {
  id_mesa     String @id @default(uuid())
  numero_mesa String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  pedidos Pedidos[]

  @@map("mesas")
}
